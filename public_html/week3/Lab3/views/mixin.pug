mixin outputGrid(value)
    table.table.table-bordered(style="width:100px")
        tbody
            -var col = 0
            while col < value
                tr
                -col++
                    -var row = 0
                    while row < value
                        -var color = ((1<<24)*Math.random()|0).toString(16);
                        td(style=`background-color:#${color}`) #{color}
                            br
                            span(style="color:#ffffff") #{color}
                        -row++

mixin mix404()
    -var x = 0
    -var anims = ["still", "shrink", "rotate"]
    -var totalDivs = (Math.floor(Math.random() * (31)) + 20);
    while x < totalDivs
        -var ind = (Math.floor(Math.random() * 3))
        div(class=anims[ind]) 404
        -x++